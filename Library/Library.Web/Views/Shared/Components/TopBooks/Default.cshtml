@model IEnumerable<Library.Domain.Models.Book>
@using Library.Domain.Convertor

<section class="last-news-side border-radius">
    <header><i class="icons icon-star"></i> <h3> پربازدیدترین کتاب ها </h3></header>
    <ul>
        @{
            foreach (var item in Model)
            {
                <li>
                    <img class="border-radius" src="~/contents/BookImages/@item.ImageName">
                    <h2> <a href="/Books/@item.BookID">@item.BookName</a></h2>
                    <span>@item.PublishYear.ToShamsi()</span>
                </li>
            }
        }
    </ul>
</section>